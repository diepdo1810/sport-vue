{
    "openapi": "3.0.0",
    "info": {
        "title": "Sport API",
        "version": "0.1"
    },
    "paths": {
        "/api/v1/teams/information": {
            "get": {
                "tags": [
                    "Teams"
                ],
                "summary": "Lấy thông tin về các mùa giải",
                "description": "Truy vấn thông tin về các mùa giải của giải đấu bóng đá",
                "operationId": "getInformation",
                "responses": {
                    "200": {
                        "description": "Dữ liệu mùa giải đã được lấy thành công",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "description": "Dữ liệu mùa giải",
                                            "type": "object"
                                        },
                                        "message": {
                                            "description": "Thông điệp trả về",
                                            "type": "string",
                                            "example": "Seasons data retrieved successfully"
                                        },
                                        "status": {
                                            "description": "Mã trạng thái HTTP",
                                            "type": "integer",
                                            "example": 200
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Lỗi nội bộ máy chủ",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "description": "Dữ liệu rỗng",
                                            "type": "null"
                                        },
                                        "message": {
                                            "description": "Thông điệp lỗi",
                                            "type": "string",
                                            "example": "Internal Server Error"
                                        },
                                        "status": {
                                            "description": "Mã trạng thái HTTP",
                                            "type": "integer",
                                            "example": 500
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/teams/statistics": {
            "post": {
                "tags": [
                    "Teams"
                ],
                "summary": "Lấy thông tin thống kê về một đội bóng",
                "description": "Endpoint này được sử dụng để lấy thông tin thống kê về một đội bóng dựa trên các tham số như đội bóng, ngày và mùa giải.",
                "operationId": "getStatistics",
                "requestBody": {
                    "description": "Dữ liệu đầu vào",
                    "required": false,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "team",
                                    "date"
                                ],
                                "properties": {
                                    "team": {
                                        "description": "Tên của đội bóng.",
                                        "type": "string"
                                    },
                                    "date": {
                                        "description": "Ngày cần thống kê. Định dạng chuỗi: 'YYYY-MM-DD'.",
                                        "type": "string",
                                        "format": "date"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Dữ liệu thống kê đã được truy vấn thành công",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "statistics": {
                                            "description": "Danh sách thông tin thống kê",
                                            "type": "array",
                                            "items": {
                                                "type": "string"
                                            }
                                        },
                                        "count": {
                                            "description": "Số lượng kết quả thống kê trả về",
                                            "type": "integer"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Lỗi nội bộ của máy chủ",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "description": "Thông điệp lỗi",
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/teams/seasons": {
            "post": {
                "tags": [
                    "Teams"
                ],
                "summary": "Lấy thông tin về các mùa giải của một đội bóng",
                "description": "Endpoint này được sử dụng để lấy thông tin về các mùa giải của một đội bóng dựa trên đội bóng được cung cấp.",
                "operationId": "getSeasons",
                "requestBody": {
                    "description": "Dữ liệu đầu vào",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "team"
                                ],
                                "properties": {
                                    "team": {
                                        "description": "Tên của đội bóng.",
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Dữ liệu mùa giải đã được truy vấn thành công",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "seasons": {
                                            "description": "Danh sách các mùa giải",
                                            "type": "array",
                                            "items": {
                                                "type": "string"
                                            }
                                        },
                                        "count": {
                                            "description": "Số lượng mùa giải trả về",
                                            "type": "integer"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Lỗi nội bộ của máy chủ",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "description": "Thông điệp lỗi",
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
